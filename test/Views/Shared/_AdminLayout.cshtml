
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<body>

    <!-- Sidebar -->
    <div class="w3-sidebar w3-light-grey w3-bar-block" style="width:15%">
        <h3 class="w3-bar-item">Menu</h3>
        <a href="/Admin/HomePage" class="w3-bar-item w3-button">HomePage </a>
        <a href="/Admin/Index" class="w3-bar-item w3-button">News </a>
        <a href="/Admin/Product" class="w3-bar-item w3-button">Product </a>
        <a href="/Admin/About" class="w3-bar-item w3-button">About</a>
        <a href="/Admin/Contact" class="w3-bar-item w3-button">Contact</a>
        <a href="/Admin/Service" class="w3-bar-item w3-button">Service</a>
        <a href="/Admin/Collaboration" class="w3-bar-item w3-button">Collaboration</a>
        <a href="/Admin/Project" class="w3-bar-item w3-button">Project</a>
        <a href="/Home" class="w3-bar-item w3-button">Go to site</a>
        <a href="/Login/Logout" class="w3-bar-item w3-button">Logout</a>
        <a class="w3-bar-item w3-button">
            @Html.ActionLink(" TR ", "ChangeLanguage", "Admin", new { selectedlanguage = "tr" }, new { @class = "btn nav-link" })
        </a>
        <a class="nav-item">
            @Html.ActionLink(" EN ", "ChangeLanguage", "Admin", new { selectedlanguage = "en" }, new { @class = "btn nav-link" })
        </a>


    </div>

    <!-- Page Content -->
    <div style="margin-left:15%">

        <div class="w3-container w3-teal">
            <h4>Admin Panel</h4>
        </div>



        <div class="w3-container">
           @RenderBody()
        </div>

    </div>

</body>
</html>
